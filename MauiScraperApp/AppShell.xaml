<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiScraperApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiScraperApp.Views"
    FlyoutBehavior="Disabled">

    <!-- 1. Connection Page (Root) -->
    <!-- We give it a simple route name -->
    <ShellContent
        Route="Connection"
        ContentTemplate="{DataTemplate local:ConnectionView}" />

    <!-- 2. Main App (TabBar) -->
    <!-- Route="MainTabs" is the container -->
    <TabBar Route="MainTabs">
        
        <!-- Tab 1: Search -->
        <!-- CRITICAL: The Route="SearchView" allows us to navigate to //SearchView -->
        <ShellContent
            Title="Search"
            Icon="search.png"
            Route="SearchView"
            ContentTemplate="{DataTemplate local:SearchView}" />

        <!-- Tab 2: Downloads -->
        <ShellContent
            Title="Downloads"
            Icon="download.png"
            Route="DownloadsView"
            ContentTemplate="{DataTemplate local:DownloadsView}" />
    </TabBar>

</Shell>