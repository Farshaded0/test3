<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiScraperApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiScraperApp.Views"
    FlyoutBehavior="Disabled">

    <!-- 1. Connection Page (Start Here) -->
    <ShellContent
        Route="Connection"
        ContentTemplate="{DataTemplate local:ConnectionView}" />

    <!-- 2. Main App (Navigation Target) -->
    <TabBar Route="MainTabs">
        <ShellContent
            Title="Search"
            Icon="search.png"
            Route="SearchView"
            ContentTemplate="{DataTemplate local:SearchView}" />

        <ShellContent
            Title="Downloads"
            Icon="download.png"
            Route="DownloadsView"
            ContentTemplate="{DataTemplate local:DownloadsView}" />
    </TabBar>

</Shell>
