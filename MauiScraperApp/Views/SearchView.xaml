<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MauiScraperApp.ViewModels"
             xmlns:m="clr-namespace:MauiScraperApp.Models"
             xmlns:s="clr-namespace:MauiScraperApp.Services"
             x:Class="MauiScraperApp.Views.SearchView"
             x:DataType="vm:SearchViewModel"
             Title="Search">

    <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto, *" Padding="10">



        <!-- 2. Search Controls (Site & Category) -->
        <Grid Grid.Row="1" ColumnDefinitions="*, *" ColumnSpacing="5" Margin="0,0,0,5">
            <Picker Grid.Column="0" Title="Site" ItemsSource="{Binding Sites}" SelectedItem="{Binding SelectedSite}" />
            <Picker Grid.Column="1" Title="Category" ItemsSource="{Binding Categories}" SelectedItem="{Binding SelectedCategory}" ItemDisplayBinding="{Binding Name}" />
        </Grid>

        <!-- 3. Sort Control (ADDED BACK) -->
        <Picker Grid.Row="2" Title="Sort By" ItemsSource="{Binding SortOptions}" SelectedItem="{Binding SelectedSortOption}" ItemDisplayBinding="{Binding Name}" Margin="0,0,0,5"/>

        <!-- 4. Search Bar -->
        <SearchBar Grid.Row="3" Placeholder="Search torrents..." Text="{Binding SearchQuery}" SearchCommand="{Binding PerformSearchCommand}" Margin="0,0,0,10"/>

        <!-- 5. Loading -->
        <ActivityIndicator Grid.Row="4" IsRunning="{Binding IsLoading}" IsVisible="{Binding IsLoading}" HorizontalOptions="Center"/>

        <!-- 6. Results -->
        <CollectionView Grid.Row="5" ItemsSource="{Binding Results}" SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="m:SearchResult">
                    <Frame Padding="10" Margin="0,5" BorderColor="LightGray">
                        <Grid RowDefinitions="Auto, Auto, Auto" ColumnDefinitions="*, Auto">
                            <Label Grid.Row="0" Grid.Column="0" Text="{Binding Title}" FontAttributes="Bold" LineBreakMode="WordWrap"/>
                            <Label Grid.Row="1" Grid.Column="0" Text="{Binding Size, StringFormat='Size: {0}'}" FontSize="12" TextColor="Gray"/>
                            
                            <VerticalStackLayout Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" VerticalOptions="Center">
                                <Label Text="{Binding Seeds, StringFormat='S: {0}'}" TextColor="Green" FontAttributes="Bold"/>
                                <Label Text="{Binding Site}" TextColor="Blue" FontSize="10"/>
                            </VerticalStackLayout>

                            <Button Grid.Row="2" Grid.ColumnSpan="2" Text="ðŸ“‹ Copy Magnet Link" 
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:SearchViewModel}}, Path=CopyMagnetLinkCommand}"
                                    CommandParameter="{Binding .}" Margin="0,5,0,0"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>


    </Grid>
</ContentPage>