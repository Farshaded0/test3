<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MauiScraperApp.ViewModels"
             xmlns:services="clr-namespace:MauiScraperApp.Services"
             x:Class="MauiScraperApp.Views.DownloadsView"
             x:DataType="viewmodels:DownloadsViewModel"
             Title="Downloads">

    <Grid RowDefinitions="Auto, Auto, Auto, *" Padding="10" RowSpacing="10">

        <!-- 1. Search Bar -->
        <SearchBar Grid.Row="0" 
                   Placeholder="Search downloads..."
                   Text="{Binding SearchText}"/>

        <!-- 2. Filter Chips (Horizontal Scroll) -->
        <ScrollView Grid.Row="1" Orientation="Horizontal" HorizontalScrollBarVisibility="Never">
            <HorizontalStackLayout BindableLayout.ItemsSource="{Binding FilterOptions}" Spacing="8">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Border StrokeShape="RoundRectangle 15"
                                Padding="12,6"
                                BackgroundColor="{StaticResource Primary}"
                                StrokeThickness="0">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer 
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:DownloadsViewModel}}, Path=SetPropertyCommand}"
                                    CommandParameter="{Binding .}"/> 
                                <!-- Note: Simple binding requires converter for selection state, 
                                     using Picker below is easier for simple MVVM -->
                            </Border.GestureRecognizers>
                            <Label Text="{Binding .}" TextColor="White"/>
                        </Border>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </HorizontalStackLayout>
        </ScrollView>
        
        <!-- Alternative Simple Filter (Easier to use) -->
        <Grid Grid.Row="1" ColumnDefinitions="*, Auto">
            <Label Text="Filter Status:" VerticalOptions="Center"/>
            <Picker Grid.Column="1" 
                    ItemsSource="{Binding FilterOptions}" 
                    SelectedItem="{Binding SelectedFilterStatus}"
                    WidthRequest="150"/>
        </Grid>

        <!-- 3. Status Bar -->
        <Grid Grid.Row="2" ColumnDefinitions="*, Auto">
            <Label Text="{Binding StatusMessage}" TextColor="Gray" VerticalOptions="Center"/>
            <ActivityIndicator IsRunning="{Binding IsLoading}" Color="{StaticResource Primary}"/>
        </Grid>

        <!-- 4. Downloads List -->
        <!-- Note: Removed RefreshView because auto-refresh is handled by timer 
             and manual pull-to-refresh conflicts with scroll position -->
        <CollectionView Grid.Row="3"
                        ItemsSource="{Binding FilteredDownloads}"
                        SelectionMode="None"
                        EmptyView="No downloads found">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="services:RemoteTorrentInfo">
                    <Frame Padding="10" 
                           Margin="0,5" 
                           CornerRadius="10" 
                           BorderColor="#E0E0E0"
                           BackgroundColor="{AppThemeBinding Light=White, Dark=#1F1F1F}">
                        <Grid RowDefinitions="Auto, Auto, Auto, Auto" 
                              ColumnDefinitions="*, Auto"
                              RowSpacing="5">
                            
                            <!-- Row 0: Name and State Badge -->
                            <Label Grid.Row="0" Grid.Column="0"
                                   Text="{Binding Name}" 
                                   FontSize="15" 
                                   FontAttributes="Bold" 
                                   LineBreakMode="TailTruncation"
                                   MaxLines="2"
                                   TextColor="{AppThemeBinding Light=Black, Dark=White}"/>

                            <Frame Grid.Row="0" Grid.Column="1"
                                   Padding="6,2"
                                   CornerRadius="4"
                                   BackgroundColor="{Binding State, Converter={StaticResource StateToColorConverter}}"
                                   BorderColor="Transparent"
                                   VerticalOptions="Start">
                                <Label Text="{Binding State}" 
                                       TextColor="White" 
                                       FontSize="10" 
                                       FontAttributes="Bold"/>
                            </Frame>
                            
                            <!-- Row 1: Progress Bar -->
                            <ProgressBar Grid.Row="1" Grid.ColumnSpan="2"
                                         Progress="{Binding Progress}" 
                                         ProgressColor="{StaticResource Primary}"
                                         HeightRequest="6"/>
                            
                            <!-- Row 2: Stats -->
                            <Grid Grid.Row="2" Grid.ColumnSpan="2" ColumnDefinitions="*, *, *">
                                <Label Text="{Binding DownloadSpeedFormatted, StringFormat='↓ {0}'}" 
                                       FontSize="11" TextColor="Green"/>
                                <Label Text="{Binding UploadSpeedFormatted, StringFormat='↑ {0}'}" 
                                       FontSize="11" TextColor="Orange" HorizontalOptions="Center"/>
                                <Label Text="{Binding SizeFormatted}" 
                                       FontSize="11" TextColor="Gray" HorizontalOptions="End"/>
                            </Grid>

                            <!-- Row 3: Actions -->
                            <Grid Grid.Row="3" Grid.ColumnSpan="2" ColumnDefinitions="Auto, Auto, *" Margin="0,5,0,0">
                                <Button Text="{Binding State, Converter={StaticResource StateToButtonTextConverter}}"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:DownloadsViewModel}}, Path=PauseTorrentCommand}"
                                        CommandParameter="{Binding .}"
                                        HeightRequest="35"
                                        FontSize="11"
                                        Margin="0,0,5,0"
                                        Padding="10,0"/>
                                
                                <Button Text="▶ Resume"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:DownloadsViewModel}}, Path=ResumeTorrentCommand}"
                                        CommandParameter="{Binding .}"
                                        IsVisible="{Binding State, Converter={StaticResource StateToPausedConverter}}"
                                        BackgroundColor="#4CAF50"
                                        HeightRequest="35"
                                        FontSize="11"
                                        Margin="0,0,5,0"
                                        Padding="10,0"/>

                                <Button Text="✕"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:DownloadsViewModel}}, Path=DeleteTorrentCommand}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="#FF5252"
                                        HorizontalOptions="End"
                                        WidthRequest="40"
                                        HeightRequest="35"/>
                            </Grid>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>